<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.loginuocusinglib"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.loginuocusinglib.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="oauthresponse"
                    android:scheme="uoc" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.loginuocusinglib.ViewUserActivity"
            android:label="@string/title_activity_post_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.loginuocusinglib.TestActivity"
            android:label="@string/title_activity_test" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.loginuocusinglib.ProfileActivity"
            android:label="@string/title_activity_profile" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.loginuocusinglib.EventActivity"
            android:label="@string/title_activity_event" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.loginuocusinglib.ProfilesListActivity" >
        </activity>
        <activity
            android:name="com.example.loginuocusinglib.TutorsActivity"
            android:label="@string/title_activity_tutors" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.loginuocusinglib.UserSettingsActivity"
            android:label="@string/menu_settings" >
        </activity>
        <activity
            android:name="com.example.loginuocusinglib.NewEventActivity"
            android:label="@string/title_activity_new_event" >
        </activity>
        <activity
            android:name="com.example.loginuocusinglib.ViewEventsActivity"
            android:label="@string/title_activity_view_events" >
        </activity>
    </application>

</manifest>